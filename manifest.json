{
    "manifest_version": 3,
    "name": "Tabflow",
    "version": "1.0",
    "description": "An intuitive tab management extension with a dark-mode overlay.",
    "permissions": ["tabs", "windows", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "overlay.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "commands": {
      "open-overlay": {
        "suggested_key": {
          "default": "Ctrl+Shift+Alt+N",
          "mac": "Command+Shift+Alt+N"
        },
        "description": "Open Tabflow Overlay"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }